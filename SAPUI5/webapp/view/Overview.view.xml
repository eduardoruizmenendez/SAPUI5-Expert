<mvc:View   controllerName = "logaligroup.SAPUI5.controller.App"
            xmlns="sap.m" 
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:core = "sap.ui.core"
            displayBlock="true">

    <Page title="{i18n>appTitle}">
        <headerContent>
            <Button id="HelloDialogButtonHeader" 
                press=".onOpenDialogHeader" 
                class="SapUiSmallMarginEnd" 
                icon="sap-icon://action"/>  
        </headerContent>
        <content>
            <mvc:XMLView viewName="logaligroup.SAPUI5.view.HelloPanel" />
            <mvc:XMLView viewName="logaligroup.SAPUI5.view.InvoicesList" />
        </content>
    </Page>

</mvc:View>